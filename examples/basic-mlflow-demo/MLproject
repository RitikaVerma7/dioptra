name: basic-mlflow-demo

entry_points:
  hello_world:
    parameters:
      output_log_string:  {type: string, default: "Hello World"}
    command: >
      python src/hello_world.py
      --output-log-string {output_log_string}

  load_model_dataset:
    parameters:
      data_dir: {type: path, default: "/nfs/data/ImageNet-Kaggle-2017/images/ILSVRC/Data/CLS-LOC"}
      dataset_name: {type: string, default: "val-sorted-5000"}
    command: >
      python src/load_model_dataset.py
      --data-dir {data_dir}
      --dataset-name {dataset_name}
