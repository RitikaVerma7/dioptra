name: tensorflow-imagenet-patches

entry_points:
  pt:
    parameters:
      data_dir: {type: path, default: "/nfs/data/ImageNet-Kaggle-2017/images/ILSVRC/Data/CLS-LOC"}
      model: {type: string, default: "keras-model-imagenet-resnet50/1"}
      model_architecture: {type: string, default: "alex_net"}
      batch_size: {type: float, default: 32}
      th: {type: float, default: 1}
      es: {type: float, default: 1}
    command: >
      python src/pt.py
      --data-dir {data_dir}
      --model {model}
      --model-architecture {model_architecture}
      --batch-size 25
      --th 10
      --es 0
  init_model:
    parameters:
      data_dir: {type: path, default: "/nfs/data/ImageNet-Kaggle-2017/images/ILSVRC/Data/CLS-LOC"}
      dataset_name: {type: string, default: "val-sorted-5000"}
    command: >
      python src/init_model.py
